                            </div>
                            <span class="text-sm text-gray-500 hidden md:block">1d ago</span>
                        </div>
                    </div>
                    
                    <!-- Activity Item 4 (Team) -->
                    <div class="activity-item">
                        <div class="flex justify-between items-center">
                            <div>
                                <span class="font-bold text-lg text-white"><i class="fas fa-user-plus text-blue-400 mr-2"></i> Team:</span>
                                <span class="text-gray-300">"New_User_01" has accepted your invitation.</span>
                            </div>
                            <span class="text-sm text-gray-500 hidden md:block">2d ago</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <!-- Session Timeout Script -->
    <script>
        const SESSION_TIMEOUT_SECONDS = 30; // 30 seconds
        let redirectTimeout; // Handles the actual 30s redirect
        let intervalTimer;   // Handles the visual 1s countdown
        let timeLeft = SESSION_TIMEOUT_SECONDS;
        let timerDisplay;
        let isListening = false; // Flag to prevent multiple listener attachments

        // Utility function to format time as MM:SS (always padded)
        function formatTime(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            const paddedMinutes = String(minutes).padStart(2, '0');
            const paddedSeconds = String(seconds).padStart(2, '0');
            return `${paddedMinutes}:${paddedSeconds}`;
        }

        // Function to update the visual timer display
        function updateDisplay() {
            if (timerDisplay) {
                timerDisplay.textContent = formatTime(timeLeft);
            }
        }
        
        // Function to handle the visual countdown every second
        function startCountdown() {
            updateDisplay();

            // Set interval to run every second
            intervalTimer = setInterval(() => {
                if (timeLeft > 0) {
                    timeLeft--;
                    updateDisplay();
                } else {
                    clearInterval(intervalTimer); 
                }
            }, 1000); // Run every 1000 milliseconds (1 second)
        }

        // Function to redirect the user (the actual timeout logic)
        function logoutUser() {
            // Clear all timers before redirecting
            clearTimeout(redirectTimeout);
            clearInterval(intervalTimer); 
            // Attempt to remove listeners if they were attached
            if (isListening) {
                removeEventListeners();
            }
            window.location.href = '/'; 
        }

        // Function to start the main 30-second inactivity detection timer
        function startRedirectTimer() {
            redirectTimeout = setTimeout(logoutUser, SESSION_TIMEOUT_SECONDS * 1000);
        }

        // Function to remove all CONTINUOUS activity listeners
        function removeEventListeners() {
            document.removeEventListener('mousemove', resetTimer);
            document.removeEventListener('keypress', resetTimer);
            // Clicks are intentionally excluded from continuous reset
            document.removeEventListener('scroll', resetTimer);
            isListening = false;
        }

        // Function to add all CONTINUOUS activity listeners (only called once)
        function addEventListeners() {
            if (!isListening) {
                document.addEventListener('mousemove', resetTimer);
                document.addEventListener('keypress', resetTimer);
                // Clicks are intentionally excluded from continuous reset
                document.addEventListener('scroll', resetTimer);
                isListening = true;
            }
        }

        // Function to reset all timers on user activity
        // This is the function that the continuous event listeners will call.
        function resetTimer() {
            // 1. Clear existing timers
            clearTimeout(redirectTimeout);
            clearInterval(intervalTimer); 

            // 2. Reset time state
            timeLeft = SESSION_TIMEOUT_SECONDS; 
            
            // 3. Restart both the visual and redirect timers
            startRedirectTimer();
            startCountdown();

            // 4. Ensure continuous listeners are active
            addEventListeners();
        }

        // Initialization when the DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            timerDisplay = document.getElementById('session-timer');
            
            // 1. Display the initial time but DO NOT start the timers yet.
            updateDisplay(); 

            // 2. Set up ONE-TIME listeners (on any activity) to start the session.
            const startSession = () => {
                // Remove these one-time listeners
                document.removeEventListener('mousemove', startSession);
                document.removeEventListener('keypress', startSession);
                document.removeEventListener('click', startSession);
                document.removeEventListener('scroll', startSession);
                
                // Now, start the timer and attach the continuous activity listeners.
                resetTimer(); 
            };
            
            // Listen for the first interaction to "activate" the session.
            document.addEventListener('mousemove', startSession);
            document.addEventListener('keypress', startSession);
            document.addEventListener('click', startSession);
            document.addEventListener('scroll', startSession);

            // Optional: Clear the timers if the user manually clicks Logout
            document.querySelector('.secondary-button').addEventListener('click', function() {
                clearTimeout(redirectTimeout);
                clearInterval(intervalTimer);
                removeEventListeners();
            });
        });
    </script>
</body>
</html>