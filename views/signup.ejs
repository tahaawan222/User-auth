<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Sign Up</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Load Boxicons for icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        /* CSS Variables from home/login for consistency */
        :root {
            --color-dark-bg: #101014;
            --color-card-bg: #1e1e24;
            --color-purple-primary: #8a2be2; /* Blue Violet */
            --color-neon-purple: #c471ed; /* Lighter Neon */
            --color-link-light: #d6b8f5;
        }

        /* Custom styles for the purple gradient and dynamic background */
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--color-dark-bg); /* Using variable for consistency */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
            overflow: hidden; 
            position: relative;
        }

        /* Keyframes for the Subtle Background Animation (Matches login.html) */
        @keyframes subtleMove {
            0% { transform: translate(0, 0) scale(1); }
            50% { transform: translate(60px, -60px) scale(1.1); } /* Updated movement */
            100% { transform: translate(0, 0) scale(1); }
        }

        /* NEW: Static, massive blurred gradient layer for deep atmosphere (Matches login.html) */
        .bg-fixed-gradient {
            position: fixed; 
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            /* Massive, highly transparent radial gradient */
            background: radial-gradient(circle at 75% 10%, var(--color-neon-purple) 0%, transparent 20%),
                        radial-gradient(circle at 25% 90%, var(--color-purple-primary) 0%, transparent 30%);
            filter: blur(150px); 
            z-index: 0;
            opacity: 0.3; 
        }

        /* UPDATED: Animated Background Element (Matches login.html) */
        .bg-moving-dots {
            position: absolute;
            top: 0;
            left: 0;
            width: 200%;
            height: 200%;
            /* Smaller, less opaque circles for a "star" or "particle" effect */
            background: radial-gradient(circle at 15% 5%, rgba(255, 255, 255, 0.1) 1%, transparent 5%),
                        radial-gradient(circle at 85% 95%, rgba(255, 255, 255, 0.08) 1%, transparent 7%),
                        radial-gradient(circle at 40% 60%, rgba(196, 113, 237, 0.2) 1%, transparent 10%);
            animation: subtleMove 50s infinite alternate; 
            z-index: 1; 
        }
        
        /* Ensure card sits above the background and gets a glass effect (Matches login.html) */
        #auth-container {
            z-index: 10; 
            position: relative;
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
        }

        /* Custom glow for the main card (Matches login.html intensity) */
        .card-glow {
            box-shadow: 0 0 40px rgba(138, 43, 226, 0.8), 
                        0 0 100px rgba(138, 43, 226, 0.3);
            border: 1px solid rgba(138, 43, 226, 0.3); 
        }

        /* Input field custom styling - Matched focus color to variable */
        .input-box {
            position: relative;
            width: 100%;
            height: 50px;
        }

        .input-box input {
            width: 100%;
            height: 100%;
            background: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid rgba(255, 255, 255, 0.4);
            padding-right: 35px;
            color: white;
            transition: all 0.3s ease;
        }

        .input-box input:focus,
        .input-box input:valid {
            border-bottom-color: var(--color-neon-purple); /* Used variable */
        }

        .input-box label {
            position: absolute;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.7);
            pointer-events: none;
            transition: all 0.3s ease;
        }

        .input-box input:focus ~ label,
        .input-box input:valid ~ label {
            top: -5px;
            font-size: 0.8rem;
            color: var(--color-neon-purple); /* Used variable */
        }

        .input-box .bx {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.5);
        }

    </style>
</head>

<body>
    <!-- NEW: Static, blurred gradient element for depth (Matches login.html) -->
    <div class="bg-fixed-gradient"></div>
    <!-- NEW: Animated Background Element for moving particles/dots (Matches login.html) -->
    <div class="bg-moving-dots"></div>

    <!-- Main Container (Updated classes for consistency with login.html) -->
    <div id="auth-container" class="bg-[var(--color-card-bg)] rounded-2xl p-8 md:p-12 
                                  w-full max-w-md transition-all duration-500 card-glow bg-opacity-80">
        
        <!-- Signup Icon -->
        <div class="flex justify-center mb-6">
            <i class='bx bxs-user-plus text-6xl text-purple-400 opacity-80'></i>
        </div>

        <h2 class="text-3xl font-bold text-white mb-8 text-center">Create Account</h2>
        
        <!-- Updated to space-y-8 for more responsive vertical spacing -->
        <form action="/signup" method="post" class="space-y-8">
            
            <!-- Username Input -->
            <div class="input-box">
                <input type="text" id="name" name="username" required autocomplete="off">
                <label for="name">Username</label>
                <i class='bx bxs-user'></i>
            </div>

            <!-- Password Input -->
            <div class="input-box">
                <input type="password" id="password" name="password" required>
                <label for="password">Password</label>
                <i class="bx bxs-lock-alt"></i>
            </div>
            
            <!-- Submit Button (Matches login.html) -->
            <button type="submit" class="w-full h-12 rounded-xl text-white font-semibold 
                                        bg-gradient-to-r from-purple-500 to-indigo-600 
                                        hover:from-purple-600 hover:to-indigo-700 transition-all duration-300
                                        shadow-lg shadow-purple-500/70 hover:scale-[1.02] transform">
                Sign Up
            </button>
            
            <!-- Login Link -->
            <div class="regi-link text-center pt-4">
                <p class="text-sm text-gray-400">Already have an account?
                    <a class="font-medium text-purple-400 hover:text-purple-300 transition-colors" href="/">Log In</a>
                </p>
            </div>
        </form>
    </div>
    
    <!-- Script tag for your Node.js application logic -->
    <script src="/index.js"></script> 
